{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div" class="cent">
        <ul id="navigation">
            {% for item in navigation %}
                <li><a href="logout.php">Logout</a></li>
            {% endfor %}
        </ul>
        <h2>{{ page_heading_2 }}</h2>
        {% if message %}
            <h2>{{ message }}</h2>
        {% endif %}
        {% if error_message %}
            <h2>{{ error_message }}</h2>
        {% endif %}
        <form action="{{ action }}" method="{{ method }}">
            <fieldset>
                <legend>Message Hub</legend>
                <p>Welcome {{ username }}, please select whether you want to view or send messages!</p>
                <br>
                {% if current_state %}
                    <label id="date">Time Received: {{ current_state.date }}</label>
                    <br>
                    {% for key, value in current_state.message.Switches %}
                        <label id={{ key }}>{{ key }}: {{ value }}</label>
                        <br>
                    {% endfor %}
                    <label id="Fan">Fan: {{ current_state.message.Fan }}</label>
                    <br>
                    <label id="Temperature">Temperature: {{ current_state.message.Temperature }}</label>
                    <br>
                    <label id="Keypad">Last Key Pressed: {{ current_state.message.Keypad }}</label>
                {% endif %}
                <br>
                <label for="view"><input id="view" type="radio" name="detail" value="view" checked="checked">View Messages</label>
                <label for="send"><input id="send" type="radio" name="detail" value="send">Send Messages</label>
                <br><br>
                <input type="submit" value="Continue">
            </fieldset>
        </form>
    </div>
{% endblock %}
