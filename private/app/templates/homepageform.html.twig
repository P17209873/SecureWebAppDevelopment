{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <ul id="navigation">
            {% for item in navigation %}
                <li><a href="logout.php">Logout</a></li>
            {% endfor %}
        </ul>
        <h2>{{ page_heading_2 }}</h2>
        <form action="{{ action }}" method="{{ method }}">
            <fieldset>
                <legend>Message Hub</legend>
                <br>
                <p>Welcome {{ username }}, please select whether you want to download, view or send messages!</p>
                <br>
                <label for="download messages"><input id="download" type="radio" name="detail" value="download">Download Messages</label>
                <label for="view messages"><input id="view" type="radio" name="detail" value="view">View Messages</label>
                <label for="send messages"><input id="send" type="radio" name="detail" value="send">Send Messages</label>
                <br><br>
                <input type="submit" value="continue">
            </fieldset>
        </form>
    </div>
{% endblock %}